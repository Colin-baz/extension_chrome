{
  "manifest_version": 3,
  "name": "FishyAnimation - Actualités",
  "version": "1.0",
  "description": "Une extension pour se tenir au courant des nouvelles actualités sur la chaîne Youtube : FishyAnimation",
  "permissions": [
    "notifications",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}